{
    "compilerOptions": {
      "moduleResolution": "node",
      "outDir": "public/dist",
      "target": "es5",
      "lib": ["es6", "dom"],
      "rootDir": "public/",
      "jsx": "react",
      "module": "esnext",
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": false,
      "sourceMap": true,
      "noEmitOnError": false,
      "emitDecoratorMetadata": false,
      "experimentalDecorators": false,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noImplicitUseStrict":false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "baseUrl": "public",
      "paths": {
        "app": ["app"]
      }
    },
    "include": [
      "public/app/**/*.ts",
      "public/app/**/*.tsx",
      "public/test/**/*.ts"
    ]
}
