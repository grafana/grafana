{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "public/",
    "outDir": "public/dist",
    "paths": {
      "@grafana/slate-react": ["../node_modules/@types/slate-react"],
      "app": ["app/"],
      "sass": ["sass/"]
    },
    "rootDirs": ["public/"],
    "typeRoots": ["node_modules/@types", "public/app/types"],
    "allowJs": true
  },
  "extends": "@grafana/tsconfig/base.json",
  "include": [
    "public/app/**/*.ts*",
    "public/e2e-test/**/*.ts",
    "public/test/**/*.ts",
    "public/vendor/**/*.ts",
    "packages/jaeger-ui-components/typings"
  ]
}
