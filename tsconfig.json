{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "public/dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "rootDirs": ["public/"],
    "jsx": "react",
    "module": "esnext",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": false,
    "inlineSourceMap": false,
    "sourceMap": true,
    "noEmitOnError": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": false,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "baseUrl": "public",
    "pretty": true,
    "typeRoots": ["node_modules/@types", "public/app/types"],
    "paths": {
      "app": ["app"],
      "sass": ["sass"]
    },
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": [
    "public/app/**/*.ts",
    "public/app/**/*.tsx",
    "public/test/**/*.ts",
    "public/vendor/**/*.ts",
    "public/e2e-test/**/*.ts"
  ]
}
