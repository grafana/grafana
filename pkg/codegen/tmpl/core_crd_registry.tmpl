	{{range .Kinds }}
	"{{ $.KindPackagePrefix }}/{{ .Props.MachineName }}"{{end}}
  "github.com/grafana/grafana/pkg/services/k8s/client"
  "github.com/grafana/grafana/pkg/services/k8s/informer"
