{
  "extends": "../../scripts/tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "declarationDir": "./compiled",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDirs": ["."],
    "moduleResolution": "bundler"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "exclude": ["dist/**/*"],
  "include": ["src/**/*.ts*"]
}
