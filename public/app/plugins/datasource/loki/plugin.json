{
  "type": "datasource",
  "name": "Loki",
  "id": "loki",
  "category": "logging",

  "logs": true,
  "metrics": true,
  "alerting": true,
  "annotations": true,
  "streaming": true,
  "backend": true,

  "queryOptions": {
    "maxDataPoints": true
  },
  "executable": "gpx_loki",
  "info": {
    "description": "Like Prometheus but for logs. OSS logging solution from Grafana Labs",
    "author": {
      "name": "Grafana Labs",
      "url": "https://grafana.com"
    },
    "logos": {
      "small": "img/loki_icon.svg",
      "large": "img/loki_icon.svg"
    },
    "links": [
      {
        "name": "Learn more",
        "url": "https://grafana.com/loki"
      },
      {
        "name": "GitHub Project",
        "url": "https://github.com/grafana/loki"
      },
      {
        "name": "Raise issue",
        "url": "https://github.com/grafana/grafana/issues/new"
      },
      {
        "name": "Documentation",
        "url": "https://grafana.com/docs/grafana/latest/datasources/loki/"
      }
    ],
    "version": "%VERSION%"
  },
  "dependencies": {
    "grafanaDependency": ">=10.4.0",
    "plugins": []
  }
}
