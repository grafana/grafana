{
  "apiVersion": "k3d.io/v1alpha3",
  "kind": "Simple",
  "kubeAPI": {
    "hostPort": "8556"
  },
  "options": {
    "k3d": {
      "wait": true
    },
    "kubeconfig": {
      "switchCurrentContext": true,
      "updateDefaultKubeconfig": true
    },
    "k3s": {
      "extraArgs": [{ "arg": "--kube-apiserver-arg=anonymous-auth=true", "nodeFilters": ["server:*"] }]
    }
  },
  "ports": [
    {
      "nodeFilters": ["loadbalancer"],
      "port": "9999:80"
    }
  ]
}
